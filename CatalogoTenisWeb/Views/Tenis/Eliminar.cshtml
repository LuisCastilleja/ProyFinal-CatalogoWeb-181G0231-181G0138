@model CatalogoTenisWeb.Models.Tenis
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Eliminar";
}

<form method="post" action="~/Tenis/Eliminar">
    <div>
        <h1>Eliminar tenis</h1>

        <input type="hidden" id="id" asp-for="Id" />

        <p>¿Está seguro de eliminar el tenis "<span id="nombreCategoria">@Model.Nombre</span>"?</p>

        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Si" id="btnSi" />
            <input onclick="history.back()" action="~/Tenis/"type="button" value="No" id="btnNo" formnovalidate="formnovalidate" />
        </div>
    </div>
</form>

