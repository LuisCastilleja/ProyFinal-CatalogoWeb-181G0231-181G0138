@model CatalogoTenisWeb.Models.ViewModels.MarcaViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Agregar";
}

<form method="post" asp-action="agregar">
    <div>
        <h1>Agregar marca</h1>
        <label>Nombre:</label>
        <input asp-for="Nombre" type="text" id="txtNombre" required="required" />
        <div>
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Agregar" id="btnAgregar" />
            <input type="button" action="~/Marcas/" onclick="history.back()" value="Cancelar" id="btnCancelar"
                   formnovalidate />
        </div>
    </div>
</form>

